<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.overview.OverviewFragment"
        android:layout_marginHorizontal="16dp">

        <TextView
            android:id="@+id/challenge_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Challenge Name"
            android:textSize="24sp"
            android:textColor="#6200EE"
            android:fontFamily="@font/roboto_regular"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/challenge_photo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="386dp"
            android:layout_height="338dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/sport_overview"
            app:layout_constraintTop_toBottomOf="@id/challenge_name"
            tools:layout_editor_absoluteX="11dp" />

        <TextView
            android:id="@+id/challenge_desc_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Challenge description:"
            android:layout_marginTop="16dp"
            android:textSize="16sp"
            android:textColor="#000000"
            android:fontFamily="@font/roboto_medium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/challenge_photo"/>

        <TextView
            android:id="@+id/challenge_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor. Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor. Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor."
            android:textSize="14sp"
            android:fontFamily="@font/roboto_regular"
            android:textColor="#979797"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/challenge_desc_title"/>

        <TextView
            android:id="@+id/challenge_rules_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Challenge rules:"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/roboto_medium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/challenge_desc"/>

        <TextView
            android:id="@+id/challenge_rules"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1. Rule: Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor. "
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/roboto_regular"
            android:textColor="#979797"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/challenge_rules_title"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>